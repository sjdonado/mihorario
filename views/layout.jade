doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Importa tu horario de Uninorte al calendario de Google")
    link(rel="manifest" href="/manifest.json")
    link(rel="canonical" href="https://uncal.herokuapp.com/")
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css")
    link(href='https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.8/css/uikit.min.css', rel='stylesheet')

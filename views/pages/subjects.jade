extends ../layout

block content
  div(class="exit-btn uk-position-top-right")
    a(href="/auth/logout")
      #[span(uk-icon="icon: close;")] Salir
  div(class="uk-width-1-4@m uk-width-1-3@s uk-width-5-6 uk-position-center")
    .uk-card.uk-card-default.uk-card-hover.uk-card-body
      h3.uk-card-title Seleccione las materias
      form(action="/calendar/create" method="POST")
        fieldset.uk-fieldset
          .uk-margin
            label
              #[input(class="uk-checkbox" type="checkbox" id="select_all")] SELECCIONAR TODAS

          hr
          each val in sections
            div(class='uk-margin')
              label
                #[input(class="uk-checkbox subject-opt" type="checkbox" name="subject" value=`${JSON.stringify(val)}`)] #{val.sectionTitle}
          
          hr
          div(class="uk-margin")
            label Tiempo para notificaci√≥n (min.)
              input(class="uk-input" type="number" name="notif_time" value="10" min="10" max="50" required)

          button(id="customBtn" class="uk-button uk-button-primary uk-width-1-1" type="submit")
            #[span(uk-icon="icon: google-plus; ratio: 1.4" class="uk-margin-right")] #{'Guardar'}
          input(type="hidden" name="tokens" value="#{tokens}")
  script(src="./js/subject.js")